@using BO
<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8"/>
        <title>Shoot-Serv</title>
    
        <meta name="viewport" content="width=device-width"/>
        <link href="~/Content/style.min.css" rel="stylesheet"/>
        <title>Shoot-Serv</title>
    
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/datepicker")
        @RenderSection("scripts", required: false)
        <script src="~/Scripts/popper.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
    
        <script src="~/Scripts/common/layout.js"></script>
        <script src="~/Scripts/common/commonQueries.js"></script>
        <script src="~/Scripts/common/common.js"></script>
    </head>

    <body class="main-bg">
        <div class="container container-bg">
            <header class="blog-header py-3">
                <div class="row flex-nowrap justify-content-between align-items-center">
                    <div class="col-4 pt-1">
                        <a class="text-muted" href="@Url.Action("Index", "Home", new {Area = ""})">
                            <img src="~/Models/Images/logo.svg" alt="logo" width="100" height="100">
                        </a>
                    </div>
                    <div class="col-4 text-center">
                        <a class="display-4 text-dark" href="@Url.Action("Index", "Home")">Shoot-Serv</a>
                    </div>
                    <div class="col-4 d-flex justify-content-end align-items-center">
                        <a class="btn btn-sm btn-outline-secondary mx-2" href="@Url.Action("Index", "Registration")">
                            Регистрация
                        </a>
                        <a class="btn btn-sm btn-outline-secondary mx-2" href="@Url.Action("Login", "Account")">Вход</a>
                    </div>
                </div>
            </header>
            <div class="nav-scroller py-1 mb-2">
                <nav class="nav d-flex justify-content-between">
                    <a class="p-2 text-muted" href="@Url.Action("Index", "Home", new {Area = ""})">На главную</a>
                    <a class="p-2 text-muted" href="@Url.Action("Index", "ShootingRange")">Тиры</a>
                    <a class="p-2 text-muted" href="@Url.Action("Index", "ShootingClub")">Команды</a>
                    <a class="p-2 text-muted" href="@Url.Action("Index", "Cup")">Соревнования</a>
                    <a class="p-2 text-muted" href="#">О проекте</a>
                    <a class="p-2 text-muted" href="#">
                        @*    @{ Html.RenderAction("GetUserInfo", "Home", new { Area = "" }); }*@
                    </a>
                    @*   <a class="p-2 text-muted" href="@Url.Action("Logout", "Home", new {Area = ""})" ">Выход</a>*@
                </nav>
            </div>
        
            <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
                <div class="col-md-6 px-0">
                    <h1 class="display-5 font-italic">Shoot-Serv для стрелкового спорта</h1>
                    <p class="lead my-3">
                        Этот ресурс предназначен для облегчения регистрации на соревнования по пулевой
                        стрельбе и урощения отчености для огранизаторов соревнований.
                    </p>
                    <p class="lead mb-0">
                        <a href="#" class="text-white font-weight-bold">Продолжить чтение...</a>
                    </p>
                </div>
            </div>
            <main role="main" class="container">
                @RenderBody()
            </main>
        </div>
    
        <footer class="blog-footer">
            <div class="container container-bg d-flex justify-content-between">
                <p>
                    <a href="">D&V Applications</a>
                </p>
                <p>
                    <a href="mailto:disa15@rambler.ru">Обратная связь</a>
                </p>
            </div>
        </footer>
    
        @{
            Html.RenderPartial("SignInModal");
        }
        
        @{
            Html.RenderPartial("SignOutModal");
        }
    
        <script type="text/javascript">
            var linksShootingRange = {
                Index: "@Url.Action("Index", "ShootingRange")",
                Add: "@Url.Action("Add", "ShootingRange")",
                Delete: "@Url.Action("Delete", "ShootingRange")",
                GetListByRegion: "@Url.Action("GetListByRegion", "ShootingRange")"
            };
        
            var linksCommon = {
                GetRegionsByCountry: "@Url.Action("GetRegionsByCountry", "StandartFilters")"
            }
        
            var linkslogin = "@Url.Action("Login", "Account")";
        
            var linksClub = {
                Get: "@Url.Action("GetShootingClubsByRegion", "ShootingClub")",
                Delete: "@Url.Action("Delete", "ShootingClub")",
                Index: "@Url.Action("Index", "ShootingClub")",
                Add: "@Url.Action("Add", "ShootingClub")"
            }
        
            var isAuthorize = ("@ViewBag.IsLogin").toLowerCase() === "true";
        
            var linksRegistration = {
                UpdateUser: "@Url.Action("UpdateUser", "Registration")",
                AddUser: "@Url.Action("AddUser", "Registration")"
            }
        
            var linkHome = "@Url.Action("Index", "Home")";
                                
            @{
                var shooterRoleId = (int) RoleParams.RoleEnum.Shooter;
                var organizationRoleId = (int) RoleParams.RoleEnum.Organization;
            }
                                
            var roles = {
                shooterRoleId: "@shooterRoleId",
                organizationRoleId: "@organizationRoleId"
            }
        </script>
    </body>
</html>