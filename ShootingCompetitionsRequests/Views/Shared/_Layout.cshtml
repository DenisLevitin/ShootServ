<!DOCTYPE html>
<html lang="ru">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>Shoot-Serv</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/themes/base/minified/jquery-ui-1.10.4.custom.css" rel="stylesheet" />
    <script src="~/Scripts/layout.js"></script>

    <link href="~/Content/styles.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/datepicker")
    @RenderSection("scripts", required: false)
</head>
<body>
    @Html.Hidden("newAccountUrl", Url.Action("Login", "Account", new { Area = "" }))
    @RenderSection("featured", required: false)
    <div class="">
        <header class="container-fluid  mainheader">
            <div class="mainpage-header">
            <h1>Shoot-Serv </h1>
            </div>
                </header>
        <nav class="navbar navbar-inverse">
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("Index", "Home", new { Area="" })">На главную</a></li>
                <li><a href="@Url.Action("Login", "Account", new { Area = "", returnUrl = Url.Action("Index", "Home", new { Area = ""}) })">Войти</a></li>
                <li id="shootingRangeButton"><a href="@Url.Action("Index", "AddShootingRange", new { Area="ShootingRange" })">Тиры</a></li>
                <li><a href="@Url.Action("Index", "AddShootingClub", new { Area="ShootingClub" })">Команды</a></li>
                <li><a href="@Url.Action("Index", "Cup", new { Area="Cup" })">Соревнования</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li id="liUserInfo">@{ Html.RenderAction("GetUserInfo", "Home", new { Area = "" }); }</li>
                <li style="float: right;"><a href="@Url.Action("Logout", "Home", new { Area = ""})" ">Выход</a></li>
            </ul>
        </nav>
        <div id="InfoError" class="instr" style="opacity:0;padding:0;padding-bottom:6px;width:15%;text-align:center; position:fixed;bottom:30px;top: 150px ;height:15%; ">
            <div id="closeShowInfo">Закрыть</div>
            <div style="position:relative;margin:2px;   border-radius:4px;border:3px solid red;height:80%;background-color:white;">
                <div id="divShowError" style="display:inline;padding:5px;color:red;font-family:tahoma;font-size:14px"></div>
                <div id="ShowInfo" style="display:inline;padding:5px;color:green;font-family:tahoma;font-size:14px;"></div>
            </div>
        </div>
        <article>
            <div id="divRenderBody" class="divRenderBody">
                @RenderBody()
            </div>
        </article>
        <footer style="height:40px;">
            <div id="footer" style="text-align:center;">
                <h5 style="display:inline;color:black;">D&V Applications</h5><br />
                <a style=" color:black" href="mailto:disa15@rambler.ru">Обратная связь</a>
            </div>
        </footer>
    </div>
    @*<div id="hellopreloader">
        <div id="hellopreloader_preload"></div>
    </div>*@
</body>
</html>
